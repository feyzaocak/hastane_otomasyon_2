<!-- RandevuAl.cshtml -->
@model Randevu

<form method="post" asp-action="Randevu">
    <div class="form-group">
        <label>Tıbbi Birim</label>
        <select asp-for="AlanId" class="form-control">
            <!-- Tıbbi birimleri doldur, örneğin sabit bir liste veya veritabanından çek -->
            <option value="Birim1">Birim 1</option>
            <option value="Birim2">Birim 2</option>
            <!-- Diğer tıbbi birimleri ekleyebilirsin -->
        </select>
    </div>
    <div class="form-group">
        <label>Doktor</label>
        <select asp-for="DoktorId" class="form-control">
            <!-- Doktorları, seçilen tıbbi birime göre doldur -->
            <option value="Doktor1">Doktor 1</option>
            <option value="Doktor2">Doktor 2</option>
            <!-- Diğer doktorları ekleyebilirsin -->
        </select>
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input type="datetime-local" asp-for="RandevuTarihi" class="form-control" />
    </div>
    <!-- Diğer gerekli alanları ekleyebilirsin -->
    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
