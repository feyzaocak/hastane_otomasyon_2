<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hastane_otomasyon_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/hastane_otomasyon_2.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header>
            <div class="row mt-3">
                <div class="col-6">
                    <div class="d-flex align-items-center">
                        <img src="~/images/logo.jpg" alt="Hastane Logo" class="img-fluid" style="max-height: 155px;" />
                        <div class="ml-3">
                            <h1 class="display-4 font-weight-bold text-dark mb-0">Sanal Klinik</h1>
                        </div>
                    </div>
                </div>
                <div class="col-6 text-right">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
                        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-weight-bold" asp-area="" asp-controller="Doktorlar" asp-action="Index">Doktorlarımız</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-weight-bold" asp-area="" asp-controller="TibbiBirimler" asp-action="Index">Tıbbi Birimler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-weight-bold" asp-area="" asp-controller="Home" asp-action="Iletisim">İletişim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-weight-bold" asp-area="" asp-controller="Randevu" asp-action="Al">Randevu Al</a>
                                </li>
                            </ul>
                        </div>
                        <div>
                            <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Login">Giriş</a>
                            <a class="btn btn-success ml-2" asp-area="" asp-controller="Account" asp-action="Register">Üye Ol</a>
                        </div>
                    </nav>
                </div>
            </div>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - hastane_otomasyon_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
