<!-- Views/Doktorlar/Index.cshtml -->
@model List<Doktor>

<h2>Doktorlarımız</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanı</th>
            <!-- Diğer sütunlar... -->
        </tr>
    </thead>
    <tbody>
        @foreach (var doktor in Model)
        {
            <tr>
                <td>@doktor.Id</td>
                <td>@doktor.AdSoyad</td>
                <td>@doktor.UzmanlikAlani</td>
                <!-- Diğer sütunlar... -->
            </tr>
        }
    </tbody>
</table>
